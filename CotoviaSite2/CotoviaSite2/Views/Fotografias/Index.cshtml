@model IEnumerable<CotoviaSite2.Models.Fotografias>

@{
    ViewData["Title"] = "Index";
}

<h1 class="subtitulo">Index</h1>

<p>
    <a asp-action="Create" class="texto">Create New</a>
</p>
<table class="table texto">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocalFoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fotografo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/fotos/@item.Foto" alt="photo of @item.Fotografo" title="@item.Fotografo" height="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocalFoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fotografo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
