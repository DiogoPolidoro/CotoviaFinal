@model IEnumerable<CotoviaSite2.Models.Fotografias>

@{
    ViewData["Title"] = "Index";
}

<h1 class="subtitulo">Fotografias</h1>
<a asp-action="Create" class="links">Adicionar uma nova fotografia</a>
<hr />
<table class="table texto">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeFoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocalFoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fotografo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/fotos/@item.Foto" alt="photo of @item.LocalFoto" title="@item.Fotografo" height="50" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeFoto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataFoto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocalFoto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fotografo)
                </td>
                <td style="font-size:15px">
                    <a asp-action="Edit" asp-route-id="@item.ID" class="links">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.ID" class="links">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID" class="links">Apagar</a>
                </td>
            </tr>
            }
    </tbody>
</table>
