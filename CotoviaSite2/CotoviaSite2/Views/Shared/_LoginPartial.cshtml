@using Microsoft.AspNetCore.Identity
@using CotoviaSite2.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{ 
    var Nome = "";
    if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        Nome = user.Nome;
            }
}

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item temas">
        <a  class="nav-link" style="color:black" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Olá @Nome</a>
    </li>
    <li class="nav-item temas">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link" style="color:black">Sair</button>
        </form>
    </li>
}
else
{
    <li class="nav-item temas">
        <a class="nav-link" style="color:black" asp-area="Identity" asp-page="/Account/Register">Registar</a>
    </li>
    <li class="nav-item temas">
        <a class="nav-link" style="color:black" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
    </li>
}
</ul>
