<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title style="font-family:'Franklin Gothic'; font-size:25px">@ViewData["Title"] - Cotovia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header style="background-color:yellowgreen">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand extratitulo" asp-area="" asp-controller="Home" asp-action="Index">Cotovia</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between texto">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item temas">
                            <a class="nav-link" style="color:black" asp-area="" asp-controller="Noticias" asp-action="Ambiente">Ambiente</a>
                        </li>
                        <li class="nav-item temas">
                            <a class="nav-link" style="color:black" asp-area="" asp-controller="Noticias" asp-action="Ciencia">Ciência</a>
                        </li>
                        <li class="nav-item temas">
                            <a class="nav-link" style="color:black" asp-area="" asp-controller="Noticias" asp-action="Cultura">Cultura</a>
                        </li>
                        <li class="nav-item temas">
                            <a class="nav-link" style="color:black" asp-area="" asp-controller="Noticias" asp-action="Desporto">Desporto</a>
                        </li>
                        <li class="nav-item temas">
                            <a class="nav-link" style="color:black" asp-area="" asp-controller="Noticias" asp-action="Economia">Economia</a>
                        </li>
                        <li class="nav-item temas">
                            <a class="nav-link" style="color:black" asp-area="" asp-controller="Noticias" asp-action="Opiniao">Opinião</a>
                        </li>
                        <li class="nav-item temas">
                            <a class="nav-link" style="color:black" asp-area="" asp-controller="Noticias" asp-action="Politica">Política</a>
                        </li>
                        <li class="nav-item temas">
                            <a class="nav-link" style="color:black" asp-area="" asp-controller="Noticias" asp-action="Saude">Saúde</a>
                        </li>
                        <li class="nav-item temas">
                            <a class="nav-link" style="color:black" asp-area="" asp-controller="Noticias" asp-action="Tecnologia">Tecnologia</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="content" style="padding-left:2em ; padding-right:2em">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted copyright">
        <div class="container">
            &copy; 2020/2021 - TI2 - Cotovia - <a href="https://www.linkedin.com/in/ana-ribeiro-560bb4214/" class="linkext">Ana Ribeiro nº:21283</a> e <a href="https://www.linkedin.com/in/diogo-polidoro-30610a215/" class="linkext">Diogo Polidoro nº:20752</a> - <a href="http://www.ipt.pt/" class="linkext">IPT</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
