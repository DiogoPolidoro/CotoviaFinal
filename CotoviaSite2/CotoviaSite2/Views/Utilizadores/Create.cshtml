@model CotoviaSite2.Models.Utilizadores

@{
    ViewData["Title"] = "Create";
}

<h1 class="subtitulo">Utilizadores</h1>
<h4 class="extratitulo">Criar novo utilizador</h4>
<a asp-action="Index" class="links">Voltar à Lista</a>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label texto"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label texto"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label texto"></label>
                <input type="file" name="Foto" accept=".jpg,.png" style="color:blue;" />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cargo" class="control-label texto"></label>
                <select asp-for="Cargo" class="form-control" asp-items="Html.GetEnumSelectList<Cargo>()"><options>Selecione o cargo</options>>></select>
                <span asp-validation-for="Cargo" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Submeter" class="btn btn-primary button texto" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
